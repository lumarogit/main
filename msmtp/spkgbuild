# description	: An SMTP client suitable for use with mutt etc.
# depends	: openssl

name=msmtp
version=1.8.25
release=1
source="https://marlam.de/$name/releases/$name-$version.tar.xz"

build() {
    cd $name-$version
    ./configure --prefix=/usr \
                --with-tls=openssl
    make
    make DESTDIR=$PKG install
}
