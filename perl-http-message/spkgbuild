release=1
source="$name-$version.tar.gz::https://cpan.metacpan.org/authors/id/O/OA/OALDERS/HTTP-Message-$version.tar.gz"

build() {
        cd HTTP-Message-$version
	perl -I. Makefile.PL INSTALLDIRS=vendor
        make
        make DESTDIR=$PKG install

}

