# description	: Font rasterization library
# depends	: libpng

name=freetype2
version=2.13.2
release=1
source="https://downloads.sourceforge.net/freetype/freetype-$version.tar.xz"

build() {
	cd freetype-$version

	./configure --prefix=/usr --enable-freetype-config
	make
	make DESTDIR=$PKG install
}
