# description	: pspg - advanced postgres pager
# depends	: ncurses

name=pspg
version=5.8.1
release=1
source="$name-$version.tar.gz::https://github.com/okbob/pspg/archive/refs/tags/$version.tar.gz"

build() {
	cd $name-$version
	./autogen.sh
	./configure --prefix=/usr 
	make
	make DESTDIR=$PKG install
}
